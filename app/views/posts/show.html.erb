<h1><%= @post.title %></h1>
<div>
  <%= @post.content %>
</div>

<% @post.categories.each do |category| %>
  <%= category.name %><br>
<% end %>

<h2>Comments</h2>

<ul>
<% @post.comments.each do |comment| %>
  <li>
  <%= comment.content %>
  </li>
<% end %>
</ul>

<h2>Users</h2>
<ul>
<% @post.users.distinct.each do |user| %>
  <li>
    <%= link_to user.username, user %>
  </li>
<% end %>
</ul>

